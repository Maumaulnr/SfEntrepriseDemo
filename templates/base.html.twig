<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-nU14brUcp6StFntEOOEBvcJm4huWjB0OcIeQ3fltAfSmuZFrkAif0T+UtNGlKKQv" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top py-2 navbar-shrink" id="mainNav">
            <div class="container px-4 px-lg-3 gap-4">
                <img src="{{ asset('img/logo-SfEntrepriseDemo.png') }}" alt="Logo du projet demo entreprise avec symfony" width="250" height="90">
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fs-5 text-white" href="{{ path('app_entreprise') }}"><strong>Liste des entreprises</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fs-5 text-white" href="{{ path('app_employe') }}"><strong>Liste des employés</strong></a>
                    </li>
                </ul>
            </div>
        </nav>
        <main class="container d-flex justify-content-center">
            <img src="{{ asset('img/SfEntrepriseDemoBck-removebg.png') }}" alt="Logo du projet entreprise en symfony" class="img-fluid mx-auto d-block bg-image">
            <div class="container px-4 px-lg-5 h-100 d-flex flex-column gap-3">
                {% block body %}{% endblock %}
            </div>
        </main>


        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
            <script src="{{ asset('js/script.js') }}"></script>
        {% endblock %}
    </body>
</html>
