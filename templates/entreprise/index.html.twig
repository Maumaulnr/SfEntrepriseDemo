{% extends 'base.html.twig' %}

{# Titre que l’on retrouvera dans le block title du fichier base.html.twig #}
{% block title %}Liste des entreprises{% endblock %}

{% block body %}
    <h1 class="text-white">Liste des entreprises</h1>

    <a href="{{ path('new_entreprise') }}" class="btn btn-success w-25">Ajouter une entreprise</a>

    <table class="table table-hover table-responsive">
        <thead class="table-light">
            <tr>
                <th>Entreprise</th>
                <th>Modifier</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
            {# boucle pour récupérer le contenu du tableau #}
            {# syntaxe pour une boucle avec Twig : {% %} #}
            {% for entreprise in entreprises %}
            <tr>
                <td>
                    {# {{ entreprise }} -> Affichera dans la vue la liste des entreprises #}
                    <a href="{{ path('show_entreprise', {'id': entreprise.id}) }}" class="align-middle text-decoration-none">{{ entreprise }}</a>
                </td>
                <td>
                    <a class="btn btn-warning" href="{{ path('edit_entreprise', {'id': entreprise.id}) }}">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('delete_entreprise', {'id': entreprise.id}) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
